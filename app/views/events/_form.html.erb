    <%= form.label :event_time %>
    <%= form.time_select :event_time, id: :event_event_time %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location, id: :event_location %>
  </div>

  <div class="field">
    <%= form.label :city %>
    <%= form.text_field :city, id: :event_city %>
  </div>

  <div class="field">
    <%= form.label :genre %>
    <%= form.text_area :genre, id: :event_genre %>
  </div>

  <div class="field">
    <%= form.label :details %>
    <%= form.text_area :details, id: :event_details %>
  </div>

  <div class="field">
    <%= form.label :artist %>
    <%= form.text_field :artist, id: :event_artist %>
  </div>

  <div class="field">
    <%= form.label :event_url %>
    <%= form.text_field :event_url, id: :event_event_url %>
  </div>

  <div class="field">
    <%= form.label :avatar %>
    <%= form.file_field :avatar %>
  </div>

  <div class="actions">
